<UserControl x:Class="Nasa.Views.Curiosity"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nasa"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Background="LightBlue" >
        <Grid DockPanel.Dock="Left" Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Curiosity" HorizontalAlignment="Center" VerticalAlignment="Top" />
            
            <Button Grid.Row="1" Content="see" HorizontalAlignment="Center" Command="{Binding SeePhotos}" Width="150" Height="60" />
        </Grid>
        <Grid>
            <Image Source="{Binding Image, Mode=TwoWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/>
        </Grid>
    </DockPanel>
</UserControl>
