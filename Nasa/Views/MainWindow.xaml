<Window x:Class="Nasa.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nasa"
        xmlns:viewmodels="clr-namespace:Nasa.ViewModels"
        xmlns:Views="clr-namespace:Nasa.Views"
        mc:Ignorable="d"
        
        Title="Nasa" Height="450" Width="800">
    <Window.Resources>
        

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="Curiosity Rover" Command="{Binding SwitchingToCuriosityViewCommand}"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Opportunity Rover" Command="{Binding SwitchingToOpportunityViewCommand}"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Spririt Rover" Command="{Binding SwitchingToSpiritViewCommand}"/>
        <ContentControl Grid.Column="1" Content="{Binding SelectedView}"/>
    </Grid>
</Window>
